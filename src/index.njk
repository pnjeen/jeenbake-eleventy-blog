<!-- Latest Blogs Section -->
<section class="section text-center">
  <h2>Latest from Our Blog</h2>
  <div class="card-grid grid-3">
    {% set recentPosts = collections.blogPosts.slice(0, 3) %}
    {% for post in recentPosts %}
      <a href="{{ post.url }}" class="card-link">
        <div class="card">
          {% if post.data.category %}
            <span class="blog-category">{{ post.data.category }}</span>
          {% endif %}
          <h3>{{ post.data.title }}</h3>
          <time class="blog-date" datetime="{{ post.date.toISOString() }}">
            {{ post.date | readableDate }}
          </time>
          <p class="blog-excerpt">
            {{ post.data.description or post.templateContent | striptags | truncate(120) }}
          </p>
        </div>
      </a>
    {% endfor %}
  </div>
  <div style="margin-top: 2rem;">
    <a href="/blog/" class="button">View All Blog Posts</a>
  </div>
</section>


