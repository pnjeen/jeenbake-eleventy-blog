{# includes/meta.njk #}
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

{# -------------------------------
   Basic Meta Tags
---------------------------------- #}
<title>{{ title or "JeenBake Creative Studio" }}</title>
<meta name="description" content="{{ description or 'Smart Websites, Strategic Content, and Scalable Learning Solutions.' }}" />

{# Safe keywords handling (array or string) #}
{% if keywords %}
  {% if keywords is iterable and not keywords is string %}
    <meta name="keywords" content="{{ keywords | join(', ') }}">
  {% else %}
    <meta name="keywords" content="{{ keywords }}">
  {% endif %}
{% else %}
  <meta name="keywords" content="web design, technical writing, content writing, SEO, elearning, content strategy, India, USA">
{% endif %}

{# -------------------------------
   Open Graph / Facebook Tags
---------------------------------- #}
<meta property="og:type" content="website" />
<meta property="og:title" content="{{ title or 'JeenBake Creative Studio' }}" />
<meta property="og:description" content="{{ description or 'Smart Websites, Strategic Content, and Scalable Learning Solutions.' }}" />
<meta property="og:image" content="{{ ogImage or '/assets/images/og-image.png' }}" />
<meta property="og:url" content="{{ url or site.url ~ site.baseUrl }}" />
<meta property="og:site_name" content="JeenBake Creative Studio" />

{# -------------------------------
   Twitter Tags
---------------------------------- #}
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="{{ title or 'JeenBake Creative Studio' }}" />
<meta name="twitter:description" content="{{ description or 'Smart Websites, Strategic Content, and Scalable Learning Solutions.' }}" />
<meta name="twitter:image" content="{{ ogImage or '/assets/images/og-image.png' }}" />

{# -------------------------------
   Canonical Tag
---------------------------------- #}
{% if canonical %}
  <link rel="canonical" href="{{ canonical }}">
{% endif %}

{# -------------------------------
   Organization Structured Data
---------------------------------- #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "JeenBake Creative Studio",
  "url": "{{ site.url ~ site.baseUrl }}/",
  "logo": "{{ site.url ~ site.baseUrl }}/assets/images/og-image.png",

  "sameAs": [
    "https://www.linkedin.com/company/jeenbake",
    "https://twitter.com/jeenbake"
  ],
  "description": "Smart Websites. Strategic Content. Scalable Learning.",
  "founder": {
    "@type": "Person",
    "name": "Jeen P N"
  }
}
</script>

{# -------------------------------
   Website Search Structured Data
---------------------------------- #}
<script type="application/ld+json">
